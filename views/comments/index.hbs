{{#each comments}}
  {{> comments/comment comment=. current_user=../current_user }}
{{/each}}

{{#if current_user}}
  <form method="POST" action="/comments">
    <div>
      <label for="comment_title">Title</label>
      <input type="text" name="comment_title" id="comment_title">
    </div>

    <div>
      <label for="comment_body">Body</label>
      <textarea name="comment_body" id="comment_body"></textarea>
    </div>

    <div>
      <input type="submit" value="Add!">
    </div>
  </form>
{{/if}}